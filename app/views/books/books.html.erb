<h1>Books</h1>
<table>
    <tr>
        <th>Title</th>
        <th>Body</th>
    </tr>
    <% @books.each do |book| %>
    <tr>
        <th><%= book.title %></th>
        <th><%= book.body %></th>
        <th><%= link_to"Show", books_path(@books) %> Edit Destroy</th>
    </tr>
    <% end %>
</table>

<h1>新規投稿</h1>

    <%= form_for(@book) do |f| %>

    <h4>タイトル</h4>
    <%= f.text_field :title %>
    
    <h4>本文</h4>
    <%= f.text_area :body %>
    
    <%= f.submit '投稿' %>
<% end %>